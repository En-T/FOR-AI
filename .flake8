[flake8]
max-line-length = 88
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    ENV,
    env.bak,
    venv.bak,
    migrations,
    .tox,
    .coverage,
    .pytest_cache,
    node_modules,
    build,
    dist,
    *.egg-info
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    F401,  # imported but unused (handled separately)
    E501   # line too long (handled by black)

per-file-ignores =
    __init__.py:F401
    manage.py:F401
    */config/settings.py:F401

max-complexity = 10
select = E,W,F,C
docstring-convention = google